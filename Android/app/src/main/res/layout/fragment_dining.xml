<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/dining_blur">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="80dp"
        android:background="@color/cardview_light_background"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:alpha="0.5">

        <TextView
            android:id="@+id/etMenuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Dining Menu"
            android:textSize="37sp"
            android:textColor="#000"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@color/common_google_signin_btn_text_dark_focused" />

        <TextView
            android:id="@+id/etBreakfastTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="55dp"
            android:text="Breakfast"
            android:textSize="30sp"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/etBreakfastOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="95dp"
            android:text="Pancakes\nEggs\nToast"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/etLunchTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="170dp"
            android:text="Lunch"
            android:textSize="30sp"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/etLunchOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="210dp"
            android:text="Burger\nRice\nTacos"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/etDinnerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="290dp"
            android:text="Dinner"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/etDinnerOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="330dp"
            android:text="Pancakes\nEggs\nToast"
            android:textColor="#000"
            android:textSize="20sp" />
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:elevation="20dp"
        android:text="Submit Feedback"
        android:alpha="0.5"/>


</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_page"
    tools:context=".MainPage">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="210dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <TextView
            android:id="@+id/txtNavigationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Navigation"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgDining"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/dining_icon_text_two" />

        <ImageView
            android:id="@+id/imgPortal"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="55dp"
            app:srcCompat="@drawable/portal_icon_text" />

        <ImageView
            android:id="@+id/imgBulletin"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="top|right"
            android:layout_marginTop="55dp"
            android:layout_marginRight="10dp"
            android:scaleX="0.85"
            android:scaleY="0.9"

            app:srcCompat="@drawable/bulletin_icon_text" />

        <TextView
            android:id="@+id/txtQuickLinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="140dp"
            android:text="Quick Links"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgDailyMenu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="top|left"
            app:srcCompat="@drawable/daily_menu_icon_text_2" />

        <ImageView
            android:id="@+id/imgFlex"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="185dp"
            android:layout_gravity="top|center"
            app:srcCompat="@drawable/add_cash_text" />

        <ImageView
            android:id="@+id/imgMaintenance"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="185dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="top|right"
            app:srcCompat="@drawable/maintanance_text" />

        <ImageView
            android:id="@+id/imgPackages"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="top|left"
            app:srcCompat="@drawable/packages_text" />

        <ImageView
            android:id="@+id/imgFeedback"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="280dp"
            android:layout_gravity="top|center"
            app:srcCompat="@drawable/feedback_text" />

        <ImageView
            android:id="@+id/imgContact"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="280dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="top|right"
            app:srcCompat="@drawable/contact_text" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="91dp"
        android:text="Welcome, Sumuk!"
        android:textColor="@color/cardview_light_background"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/txtFlexHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="140dp"
        android:text="IlliniFlex: $236.86"
        android:textColor="@color/cardview_light_background"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="160dp"
        android:text="Unit: 711E"
        android:textColor="@color/cardview_light_background"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imgSignOut"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="31dp"
        app:srcCompat="@drawable/signout" />


</RelativeLayout>